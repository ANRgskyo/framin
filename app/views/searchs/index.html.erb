<div class="container">
  <%= search_form_for @qa, url: search_index_path do |f| %>
    <div class="row">
    <%= f.search_field :name_cont, class: "col-lg-8" %>
    <%= button_tag type: 'submit', class: "btn btn-primary" do %>
       <%= fa_icon("search", class: "icon4") %>
    <% end %>
    </div>
  <% end %>

<br>
  <% @users.each do |user| %>
  <div class="row">
  	<%= link_to user_path(user.id) do %>
  	<div class="col-lg-3">
      <%= attachment_image_tag user, :image, :fill, 200, 200, fortmat: "jpg", :size => "100*100", fallback: "no-user-image.jpg", class: "user-image-work" %>
    </div>
    <% end %>
    <div class="col-lg-2">
      <h5>User Name:</h5>
      <h5><%= user.name %></h5>
    </div>
    <div class="col-lg-5">
      <h5>Introduction:</h5>
      <h5><%= user.introduction %></h5>
    </div>
    <div class="col-lg-2">
      <section id="user_<%= user.id %>">
      <%= render 'users/follow_form', user: user if signed_in? %>
      </section>
    </div>
    <div class="col-lg-12" style="border-bottom: solid 3px #C0C0C0;"></div>
  </div>
  <% end %>
    </div>
</div>








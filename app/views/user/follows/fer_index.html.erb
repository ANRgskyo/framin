<div class="container bg-light" style="border-radius: 78px 78px 22px 22px;">

  <!-- フォロワー人数表示 -->
  <div class="col-lg-2 offset-lg-2">
    <h1 class="stat"><strong>Follower:<%= @user.followers.count %></strong></h1>
  </div>

  <!-- フォロワーユーザ一覧表示 -->
  <% @users.each do |user| %>
  <br>
  <div class="row">
  	<%= link_to my_work_path(user.follower.id) do %>
  	<div class="col-lg-3">
      <%= attachment_image_tag user.follower, :image, :fill, 200, 200, fortmat: "jpg", fallback: "no-user-image.jpg", size: "200x200", class: 'user-image-work' %>
    </div>
    <% end %>
    <div class="col-lg-2">
      <h5>User Name:</h5>
      <h5><%= user.follower.name %></h5>
    </div>
    <div class="col-lg-5">
      <h5>Introduction:</h5>
      <h5><%= user.follower.introduction %></h5>
    </div>
    <div class="col-lg-2">
      <section id="user_<%= user.follower.id %>">
      <%= render 'users/follow_form', user: user.follower if signed_in? %>
      </section>
    </div>
  </div>
  <div class="col-lg-12" style="border-bottom: solid 3px #C0C0C0;"></div>
  <% end %>

  <div class="col-lg-4 offset-lg-5">
  <h4><%= paginate @users %></h4>
  </div>

<br>
</div>